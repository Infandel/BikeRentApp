<div class="modal">
  <form class="modal-card" onsubmit={{action "saveTrip"}}>
    <h3 class="modal-heading">Add New Trip for {{model.bicycle.brand}} </h3>

    <div class="modal-content">
      <div class="field">
        <label>Trip Time:</label>
        {{input type="text" placeholder="Trip Time(In hours)" value=model.trip.rentHours}}
      </div>
      <div class="field">
        <label>Rent point:</label>
        {{input type="text" placeholder="Rent point" value=model.trip.rentPoint}}
      </div>
      <div class="field">
        <label>Renting date is (YYYY-MM-DD):</label>
        {{input type="text" placeholder="Renting date" value=model.trip.rentDate}}
      </div>
    </div>

    <div class="modal-footer">
      {{#link-to "bicycle.detail" model.bicycle.id class="btn-clear"}}Cancel{{/link-to}}
      <button type="submit" class="btn-submit">Submit</button>
    </div>
  </form>
</div>

